<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mroze.minerise.LearnActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/materials_button5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="425dp"
        android:layout_height="129dp"
        android:layout_marginBottom="144dp"
        android:background="@mipmap/tools"
        android:text="How to explore"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/materials_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="429dp"
        android:layout_height="144dp"
        android:background="@mipmap/materials"
        android:text="Minerals"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="351dp"
        android:layout_height="387dp"
        android:layout_marginBottom="272dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/logo" />

</android.support.constraint.ConstraintLayout>
